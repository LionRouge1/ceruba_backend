<%= render @form %>

<div class="my-4 d-flex align-items-center">
  <%= link_to "Edit this form", edit_form_path(@form), class: "btn btn-primary me-2" %>
  <%= link_to "Back to forms", forms_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this form", @form, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
</div>

<% if @form.data_entries.any? %>
  <h3 class="mt-5">Data Entries</h3>
  <table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
      <tr>
        <% @form.data_entries.first.attributes.each_key do |key| %>
          <th><%= key.titleize %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @form.data_entries.each do |entry| %>
        <tr>
          <% entry.attributes.each_value do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info mt-4">No data entries found for this form.</div>
<% end %>
